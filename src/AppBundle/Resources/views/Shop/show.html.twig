{% extends 'AppBundle::layout.html.twig' %}

{% block content %}
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <!-- /.box-header -->
                <div class="box-body">
                    <table class="datatable table table-bordered table-hover">
                        <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ shop.id }}</td>
                            </tr>
                            <tr>
                                <th>Name</th>
                                <td>{{ shop.name }}</td>
                            </tr>
                            <tr>
                                <th>Description</th>
                                <td>{{ shop.description }}</td>
                            </tr>
                            <tr>
                                <th>Api_url</th>
                                <td>{{ shop.apiurl }}</td>
                            </tr>
                            <tr>
                                <th>Responce_type</th>
                                <td>{{ shop.responcetype }}</td>
                            </tr>
                            <tr>
                                <th>Responce_raw</th>
                                <td>{{ shop.responceraw }}</td>
                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <ul>
        <li>
            <a href="{{ path('app_shop_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('app_shop_edit', { 'id': shop.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
</section>
{% endblock %}
